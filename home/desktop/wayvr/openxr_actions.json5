// Quest 3 (Oculus Touch Controller) tuned for Space Drag/Turn workflow.
{
  profile: "/interaction_profiles/oculus/touch_controller",

  // Hold left menu to drag playspace.
  space_drag: {
    left: "/user/hand/left/input/menu/click",
  },

  // Hold right B to rotate playspace (Space Turn equivalent).
  space_rotate: {
    right: "/user/hand/right/input/b/click",
  },

  // Double-click left menu to reset playspace offset.
  space_reset: {
    double_click: true,
    left: "/user/hand/left/input/menu/click",
  },

  // Double-click left Y to show/hide overlays.
  show_hide: {
    double_click: true,
    left: "/user/hand/left/input/y/click",
  },
}
