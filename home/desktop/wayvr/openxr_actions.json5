// Oculus Touch Controller.
{
  profile: "/interaction_profiles/oculus/touch_controller",

  // ... pose / haptic / click / grab は基本そのまま ...

  // 1) Space DragをYホールドに
  space_drag: {
    left: "/user/hand/left/input/y/click"
  },

  // 2) Show/HideはYから退避（右Bダブルクリック例）
  show_hide: {
    double_click: true,
    right: "/user/hand/left/input/x/click"
  },

  // 3) リセットは従来どおり（例：メニューダブルクリック）
  space_reset: {
    double_click: true,
    left: "/user/hand/left/input/y/click"
  },
}

