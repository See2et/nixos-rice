{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "oh-my-opencode@3.6.0",
    "@mohak34/opencode-notifier@latest"
  ],
  "theme": "tokyonight-transparent",
  "keybinds": {
    "variant_cycle": "ctrl+alt+t",
  },
  "mcp": {
    "serena": {
      "type": "local",
      "enabled": true,
      "command": [
        "uvx",
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "claude-code",
        "--project",
        "{cwd}"
      ],
      "environment": {
        "PYTHONUNBUFFERED": "1",
        "UV_TOOL_DIR": "{env:HOME}/.local/share/uv/tools",
        "UV_TOOL_BIN_DIR": "{env:HOME}/.local/share/uv/tools/bin"
      }
    },
    "context7": {
      "type": "local",
      "enabled": true,
      "command": [
        "npx",
        "-y",
        "@upstash/context7-mcp@latest"
      ]
    }
  }
}
